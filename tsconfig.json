{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es5",
        "module": "esnext",
        "lib": [
            "es2015",
            "es2016",
            "dom"
        ],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "distts",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "app/*": ["src/*"],
        },
    },
    "include": [
        "src/**/*"
    ],
    "exclude": []
}
